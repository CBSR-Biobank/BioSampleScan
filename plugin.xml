<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="edu.ualberta.med.biosamplescan.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="edu.ualberta.med.biosamplescan.rcp.Perspective"
            fixed="false"
            id="edu.ualberta.med.biosamplescan.rcp.perspective"
            name="Perspective">
      </perspective>
   </extension>
   <extension
         id="edu.ualberta.med.biosamplescan.Options"
         name="Options"
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="edu.ualberta.med.biosamplescan.View"
            id="edu.ualberta.med.biosamplescan.view">
      </view>
      <view
            class="edu.ualberta.med.biosamplescan.Options"
            id="edu.ualberta.med.biosamplescan.options"
            name="Options"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <widget
            class="biosamplescan.WorkbenchWidget1"
            id="BioSampleScan.widget1">
      </widget>
   </extension>

</plugin>
